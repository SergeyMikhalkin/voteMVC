@using vote.Models
@model IEnumerable<Competition>
@{
    int index = 0;
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-offset-10 col-md-2 col-lg-offset-10 col-lg-2">
            @Html.ActionLink("Добавить", "Add", "Admin", null, new { @class = "btn btn-lg btn-default btn-block" })
        </div>
    </div>
    <div class="row top-margin-10">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Мероприятие</th>
                        <th>Дата</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var competition in Model)
                    {
                        <tr>
                            <td>
                                @(++index)
                            </td>
                            <td><span>@competition.Name</span></td>
                            <td><span>@competition.Date</span></td>
                            <td><a href="Edit/@competition.Id"><span class="glyphicon glyphicon-pencil"></span></a></td>
                            <td><a href="Delete/@competition.Id"><span class="glyphicon glyphicon-remove"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>