@model vote.Models.VoteViewModel

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-offset-3 col-md-6">
            <div class="vote-col">
                @using (Html.BeginForm("Center", "Competitions", null, FormMethod.Post, new { @class = "", role = "form", name = "form", id = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Info)
                    @Html.HiddenFor(m => m.Place)
                    @Html.HiddenFor(m => m.Map)
                    @Html.HiddenFor(m => m.Print)
                    @Html.HiddenFor(m => m.Sealed)
                    @Html.HiddenFor(m => m.Distance)
                    @Html.HiddenFor(m => m.Start)
                    @Html.HiddenFor(m => m.Finish)
                    @Html.HiddenFor(m => m.Center)
                    @Html.HiddenFor(m => m.Results)
                    @Html.HiddenFor(m => m.UserID)
                    @Html.HiddenFor(m => m.CompetitionID)
                    @Html.HiddenFor(m => m.GroupID)
                    <div class="row top-margin-10">
                        <div class="col-md-12">
                            <img src="~/Content/img/LogosForVoting/center.png" class="img-thumbnail center-block" />
                        </div>
                    </div>
                    <div class="row top-margin-10">
                        <div class="col-md-12 text-center">
                            <h4>Центр соревнований, полевой лагерь, размещение</h4>
                        </div>
                    </div>
                    <div class="row top-margin-10">
                        <div class="col-md-12">
                            <div class="panel-group">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">
                                            <a data-toggle="collapse" href="#items">За что я голосую?</a>
                                        </h3>
                                    </div>
                                    <div id="items" class="panel-collapse collapse">
                                        <ul class="list-group">
                                            <li class="list-group-item">наличие различных вариантов размещения</li>
                                            <li class="list-group-item">отдалённость мест проживания от центра соревнований (старта и финиша)</li>
                                            <li class="list-group-item">транспортное обеспечение участников соревнований</li>
                                            <li class="list-group-item">соответствие уровня сервиса каждому из видов размещения и условиям, указанным в приглашении</li>
                                            <li class="list-group-item">обеспечение питания (буфет) в местах проживания</li>
                                            <li class="list-group-item">наличие водоёма, парковки и т.д.</li>
                                            <li class="list-group-item">обеспечение досуга, культурная программа</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row top-margin-10">
                        <div class="col-md-12">
                            <small>Комментарий(необязательно!):</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.TextArea("commentAboutCenter", "", new { @class = "form-control", row = "2" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h5>Оценка</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3 col-md-3 col-lg-3 text-right grade-border-right grade-padding-3">
                            <small>Плохо</small>
                        </div>
                        <div class="col-xs-6 col-md-6 col-lg-6 text-center grade-padding-3">
                            @Html.Hidden("centerGrade")
                            <div class="grade text-center"><div onclick="onClick(1)">1</div></div>
                            <div class="grade text-center"><div onclick="onClick(2)">2</div></div>
                            <div class="grade text-center"><div onclick="onClick(3)">3</div></div>
                            <div class="grade text-center"><div onclick="onClick(4)">4</div></div>
                            <div class="grade text-center"><div onclick="onClick(5)">5</div></div>
                        </div>
                        <div class="col-xs-3 col-md-3 col-lg-3 text-left grade-border-left grade-padding-3">
                            <small>Хорошо</small>
                        </div>
                    </div>
                    <div class="row top-margin-20">
                        <div class="col-md-12">
                            <small>Вопросы:</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-success"
                                     role="progressbar" aria-valuenow="100"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width:100%">10/10</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    function onClick(value) {
        $("#centerGrade").attr("value", value);
        $("#form").submit();
    }
</script>