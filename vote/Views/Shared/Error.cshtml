@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Ошибка";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 col-md-offset-2">
            <img src="@Url.Content("~/Content/img/error.jpg")" class="img-thumbnail center-block" width="300" height="300" />
        </div>
        <div class="col-md-5">
            <blockquote class="error-blockquote">
                <h3 class="text-danger">Упс! Что-то пошло не так =(</h3>
                <p class="text-danger">Во время выполнения запроса произошла ошибка. </p>
            </blockquote>
        </div>
    </div>
</div>